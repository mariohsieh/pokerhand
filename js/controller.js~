				{"suit": "Diamond", "value": 5},
				{"suit": "Heart", "value": 13}
			];	 
		*/
			console.log(player1.hand);
			console.log(player2.hand);
/*			
			player1.score = handCalculate(player1.hand);
			player2.score = handCalculate(player2.hand);
